{
  "name": "46bettor-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for 46Bettor (odds, schedule, metrics).",
  "main": "index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --legacy-watch index.js",
    "smoke": "bash scripts/smoke.sh",
    "metrics": "echo \"Try: /api/metrics/summary, /ledger, /record, /export.csv\"",
    "tiles": "curl -sS -H \"x-admin-key: $ADMIN_KEY\" http://127.0.0.1:5050/api/metrics/tiles | jq ."
  },
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "fast-xml-parser": "^5.2.5",
    "helmet": "^8.1.0",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "license": "MIT"
}
